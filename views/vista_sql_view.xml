<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Definición de la vista de árbol -->
    <record id="view_vista_sql_tree" model="ir.ui.view">
        <field name="name">vista.sql.view.tree</field>
        <field name="model">vista.sql.view</field>
        <field name="arch" type="xml">
            <tree string="Facturas y Pagos">
                <field name="factura"/>
                <field name="orden_venta"/>
                <field name="cliente_id"/>
                <field name="total_factura"/>
                <field name="estado_factura"/>
                <field name="total_pagado"/>
            </tree>
        </field>
    </record>

    <!-- Definición de la acción de ventana -->
    <record id="view_vista_sql_action" model="ir.actions.act_window">
        <field name="name">Facturas y Pagos</field>
        <field name="res_model">vista.sql.view</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_vista_sql_tree"/>
    </record>

    <!-- Definición del menú "Facturas y Pagos" al mismo nivel que "Reporting" -->
    <menuitem id="menu_vista_sql"
        name="Facturas y Pagos"
        parent="account.menu_finance_reports"
        action="view_vista_sql_action"
        sequence="15"/>
</odoo>
